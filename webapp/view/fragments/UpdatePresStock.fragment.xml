<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml">

    <Dialog id="updatePresStockBox" title="Update Presentation Stock" state="Warning">
        <VBox justifyContent="" alignItems="Center">

            <Text class="sapUiSmallMargin" text="Please select the ideal display quantity for your retail shelves."></Text>
            <HBox alignItems="Center" justifyContent="Start" width="100%">
                <StepInput class="sapUiSmallMarginBegin"
                    value="{tableData>presStock}"
                    width="70%"
                    change=".onChangePresStock" />
                <Label class="" text="EA"></Label>

            </HBox>
        </VBox>
        <beginButton>
            <Button text=" Close" press=" .onCloseUpdatePresStock" class=" sapUiNoMarginBottom" type="Emphasized"></Button>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
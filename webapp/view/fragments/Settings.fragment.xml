<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml">


    <Dialog id="settingsBox" title="Settings">
        <VBox justifyContent="">
            <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBeginEnd">
                <Label text="Empty shelves auto-tag:" class="sapUiTinyMargin"></Label>
                <Switch state="true" change=".onEmptyShelvesAutoTag" id="emptyShelvesSwitchSettings" />
            </HBox>
            <Toolbar width="100%" height="1px" />
            <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMarginBeginEnd">
                <Label text="Display Images:" class="sapUiTinyMargin"></Label>
                <Switch state="true" change=".onShowImages" class="" />
            </HBox>
        </VBox>
        <beginButton>
            <Button text="Close" press=".onCloseSettings" class="sapUiNoMarginBottom" type="Emphasized"></Button>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
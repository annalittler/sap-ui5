<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="settingsBox" title="Settings">
        <Text text="Images:" class="sapUiTinyMargin"></Text>
        <Switch state="false" customTextOn="On" customTextOff="Off" change=".onShowImages" />
        <Button text="Close" press=".onCloseSettings" class="sapUiNoMarginBottom
" width="100%" type="Emphasized"></Button>
    </Dialog>
</core:FragmentDefinition>
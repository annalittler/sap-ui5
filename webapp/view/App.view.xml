<mvc:View
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
  xmlns:prdimg="fsni.ca.lib.product.image.controls" xmlns:m="sap.m" xmlns:f="sap.f"
  xmlns:barcode="fsni.ca.lib.barcode.scanner.controls" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:ndc="sap.ndc"
  controllerName="sap.ui.demo.walkthrough.controller.App" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">

  <Shell showLogout="false" appWidthLimited="false">

    <App>

      <pages>
        <Page title="{i18n>homePageTitle}">
          <customHeader design="Solid">
            <f:ShellBar title="{i18n>appTitle}" showNavButton="true"
            >
              <!-- <Button icon="sap-icon://bar-code" /> -->
              <f:profile>
                <Avatar initials="AL" />

              </f:profile>
            </f:ShellBar>
          </customHeader>

          <content>
            <html:div id="scandit-barcode-picker"></html:div>
            <!-- <Form justifyContent="Center"> -->
            <Bar id="bar0" translucent="true">

              <contentMiddle>
                <Input
                  placeholder="Enter article number" width="65%" id="searchInputVal"
                ></Input>
                <Button press="onAddItem" width="50px" text="Add" type="Ghost"></Button>
                <Switch state="false" customTextOn="On" customTextOff="Off" change=".onShowImages">
                  <layoutData>
                    <FlexItemData growFactor="1" />
                  </layoutData>
                </Switch>
              </contentMiddle>

            </Bar> <!-- </Form> -->

            <!-- <Panel headerText=" {i18n>
            panelTitle}"> -->
            <!-- <content> -->
            <!-- <Button text="Increment by 1" press=".incrementBy1" />
              <Text text="0" id="counter" />
              <Button text="Reset" press=".reset" />
              <Text text="Enter Your Name" id="name" />
              <Input
                value="{dataModel>/recipient/name}"
                description="Hello {dataModel>/recipient/name}"
                valueLiveUpdate="true"
                width="60%"
              /> -->
            <!-- <Input placeholder="Enter an article number" value="{dataModel>/search/item}"
                valueLiveUpdate="true" width="80%" />
              <Button text="{i18n>inputSearch}" press=".sayHi" width="20%" /> -->
            <!-- headerText="{tableData>/title}" -->
            <List id="episodeOverView"
              items="{tableData>/articles}" mode="Delete" delete="onDeleteItem">
              <items>
                <CustomListItem id="idListItem" type="Active">
                  <l:Grid width="100%" vSpacing="0" class="sapUiSmallMarginTop sapUiSmallMarginBottom sapUiSmallMarginBegin">
                    <VBox justifyContent="Center" alignItems="Center" class="sapUiTinyMarginTop sapUiTinyMarginRight">
                      <!-- <VBox justifyContent="Center"> -->
                      <!-- <prdimg:ProductImage src="{tableData>image}" requestSize="S" width="50px" height="50px" /> -->
                      <!-- <core:Icon size="2rem" src="{tableData>image}" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" /> -->


                      <Image src="{tableData>image}" height="50px" visible="{= ${showImgs>/status} === true ? true : false }" valueLiveUpdate='true' />
                      <layoutData>
                        <l:GridData span="XL2 L2 M2 S2" />
                      </layoutData>
                    </VBox>
                    <VBox justifyContent="Center" class="">

                      <Title text="{tableData>name} {tableData>qty}" wrapping="true"></Title>

                      <!-- <Text text="{= ${showImgs>/status} == true ? 'Warning' : 'Error' }" /> -->
                      <!-- <Text text="${typeof {showImgs>/status}}" /> -->
                      <!-- <prdimg:ProductImage fanId="{tableData>image}" requestSize="S" width="50px" height="50px" /> -->
                      <ObjectAttribute title="Article" text="{tableData>articleNo}" />
                      <ObjectStatus class="sapUiTinyMarginTop sapUiTinyMarginBottom" text="{= ${tableData>soh} > 0 ? 'Replenish Full Shelf' : 'Report to Inv. Ctr' }"
                        state="{= ${tableData>soh} > 0 ? 'Warning' : 'Error' }" />
                      <!-- <ObjectStatus class="sapUiTinyMarginTop sapUiTinyMarginBottom" text="{= ${tableData>presStock} > 0 ? 'Replenish Full Shelf' : '' }"
                          state="{= ${tableData>presStock} > 0 ? 'Error' : 'None' }" /> -->
                      <layoutData>
                        <l:GridData span="XL8 L8 M8 S8" />
                      </layoutData>
                    </VBox>
                    <VBox justifyContent="Start">
                      <!-- <ObjectStatus text="{= ${tableData>presStock} > 0 ? 'Pres. Stock: ' + ${path: 'tableData>presStock', type: 'sap.ui.model.type.Integer'} : 'Pres. Stock: 0' }"
                        state=" {= ${tableData>presStock} > 0 ? 'None' : 'Error' }" /> -->
                      <ObjectStatus class="sapUiTinyMarginBottom" text="{= ${tableData>presStock} > 0 ? 'Pres. Stock: ' + ${path: 'tableData>presStock', type: 'sap.ui.model.type.Integer'} : 'Pres. Stock: 0' }"
                        state="{= ${tableData>presStock} > 0 ? 'None' : 'Error' }" />
                      <ObjectStatus class="sapUiTinyMarginTop" text="{= ${tableData>soh} > 0 ? 'SOH: ' + ${path: 'tableData>soh', type: 'sap.ui.model.type.Integer'} : 'S0H: 0' }"
                        state="{= ${tableData>soh} > 0 ? 'None' : 'Error' }" />
                      <layoutData>
                        <l:GridData span="XL2 L2 M2 S2" />
                      </layoutData>
                    </VBox>
                    <VBox justifyContent="Start">
                      <!-- <ObjectStatus text="{= ${tableData>presStock} > 0 ? 'Pres. Stock: ' + ${path: 'tableData>presStock', type: 'sap.ui.model.type.Integer'} : 'Pres. Stock: 0' }"
                        state=" {= ${tableData>presStock} > 0 ? 'None' : 'Error' }" /> -->
                      <!-- <Button id="idButtonTrash" icon="sap-icon://delete" press=".onDeleteItem" /> -->
                      <layoutData>
                        <l:GridData span="XL2 L2 M2 S2" />
                      </layoutData>
                    </VBox>
                  </l:Grid>
                </CustomListItem>
              </items>
              <!-- <ObjectListItem title="{tableData>name}" icon="{tableData>image}" type="Active" attributes="hello">
                  <ObjectAttribute text=" Article: {tableData>articleNo}" />
                  <firstStatus></firstStatus>
                </ObjectListItem> -->
            </List>
            <!-- <List id="episodeOverView" headerText="{tableData>/title}" items="{tableData>/articles}">
                <StandardListItem title="{tableData>name}" icon="{tableData>image}" description="Quantity: {tableData>qty} - Price: ${tableData>price} - In stock {tableData>stock}" />
              </List> -->
          </content>
          <!-- </Panel> -->
          <!-- </content> -->
          <footer>
            <Toolbar design="Solid" enabled="true" visible="true" width="100%">
              <!-- <barcode:BarcodeScannerButton scanSuccess="onCameraBarcodeScan" /> -->
              <Button id="scanBtn" icon="sap-icon://bar-code" press=".onStartScan" pressed="false" visible="true" />
              <Button text="End Scanning" id="closeBtn" visible="false" press=".onStopScan"></Button>
              <!-- <Button id="idButtonAddProduct" text="Add Product" /> -->
              <ToolbarSpacer />
              <Button id="idButtonDelete" type="Reject" text="Delete List" press=".onDeleteList" ariaHasPopup="Dialog" />
              <Button id="idButtonExport" type="Emphasized" text="Export" />

            </Toolbar>
          </footer>
        </Page>
      </pages>
    </App>
  </Shell>
</mvc:View>